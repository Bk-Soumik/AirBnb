<% layout("/layout/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">LogIn to AirBnb</h2>
    <div class="col-6 offset-3">
        <form method="post" action="/login">
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input id="username" name="username" class="form-control" required>
                <div class="invalid-feedback">Enter valid username</div>
                <div class="valid-feedback">Valid username</div>
            </div>   
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input id="password" name="password" class="form-control" required>
            </div>   
            <button class="btn btn-success">LogIn</button>
        </form>
        <p class="mt-2" style="font-weight: 400;">New user? <a href="http://localhost:3000/signup" style="text-decoration: none; font-weight: 600;">Sign Up</a></p>
    </div>
</div>